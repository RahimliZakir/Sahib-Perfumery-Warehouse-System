@inject SignInManager<AppUser> signInManager;
@model AddStaffFormModel;

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>İşçilər - Əlavə - Admin</title>
    <base href="~/" />
    <link rel="stylesheet" href="Assets/Sources/CSS/bootstrap.min.css" />
    <script src="https://kit.fontawesome.com/3077fe3d43.js"></script>
    <link rel="stylesheet" href="Assets/CSS/answer-system.min.css" />
    <link rel="shortcut icon" href="uploads/logos/logo.png" type="image/x-icon">
</head>
<body>
    <header id="add-admin-header">
        <nav id="add-admin-nav">
            <div class="container add-admin-nav-container">
                <div class="row">
                    <div class="col-6 add-admin-nav-left">
                        <div class="img-div">
                            <a asp-action="Index" asp-controller="AnswerSystem">
                                <img src="uploads/logos/logo.png" alt="SAHIB">
                            </a>
                        </div>
                    </div>
                    <div class="col-6 add-admin-nav-right">
                        <ul class="d-flex" style="margin-right: 15px;">
                            @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            {
                                <li style="margin-right: 10px;">
                                    <a asp-action="Index" asp-controller="Brands">
                                        Brend
                                    </a>
                                </li>
                            }
                            <li style="margin-right: 10px;">
                                <a asp-action="Index" asp-controller="AnswerSystem">
                                    Cavablandırma sistemi
                                </a>
                            </li>
                            @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                            {
                                <li>
                                    <a asp-action="Index" asp-controller="Staff" style="color:yellow;">
                                        İstifadəçilər
                                    </a>
                                </li>
                            }
                        </ul>
                        <p>@ViewBag.Username</p>
                        <a asp-action="SignOut" asp-controller="Account">
                            <i class="fas fa-sign-out-alt"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>


    <div class="container" style="padding-top: 120px;">
        <div class="row pt-5">
            <h1 class="text-center mb-5">İşçi əlavə etmə pəncərəsi.</h1>
            <div class="offset-3 col-6">
                <form method="post" asp-action="AddStaff" asp-controller="AnswerSystem">
                    <div asp-validation-summary="ModelOnly"></div>
                    <h5 class="text-center mb-3" style="color: red;">@ViewBag.UserDublicate</h5>
                    <div class="form-group">
                        <label asp-for="Username">İstifadəçi adı: </label>
                        <input class="form-control" autocomplete="off" asp-for="Username" type="text" />
                        <span style="color: red;" asp-validation-for="Username"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Email">Email: </label>
                        <input class="form-control" autocomplete="off" asp-for="Email" type="text" />
                        <span style="color: red;" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Password">Şifrə: </label>
                        <input class="form-control" asp-for="Password" type="password" />
                        <span style="color: red;" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="PasswordConfirm">Şifrə yenidən: </label>
                        <input class="form-control" asp-for="PasswordConfirm" type="password" />
                        <span style="color: red;" asp-validation-for="PasswordConfirm"></span>
                    </div>
                    <button type="submit" class="btn btn-success mt-3 mb-3">Əlavə et</button>
                </form>
            </div>
        </div>
    </div>

    <script src="Assets/Sources/JS/jquery.min.js"></script>
    <script src="Assets/Sources/JS/bootstrap.bundle.min.js"></script>
    <script src="libs/image-input/js/jquery.image-input.js"></script>
    <script src="libs/jquery-validate/jquery.validate.min.js"></script>
    <script src="libs/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="Assets/JS/answer-system.js"></script>
</body>
</html>
