@model sahib.az.WebApplicationUI.Models.Entity.Logo

@{
    ViewData["Title"] = "Loqo";
}

@section css{
    <link rel="stylesheet" href="Assets/CSS/answer-system.min.css" />
}

<header id="add-admin-header">
    <nav id="add-admin-nav">
        <div class="container add-admin-nav-container">
            <div class="row">
                <div class="col-6 add-admin-nav-left">
                    <div class="img-div">
                        <a href="answer-system.html">
                            <img src="uploads/logos/logo.png" alt="SAHIB">
                        </a>
                    </div>
                </div>
                <div class="col-6 add-admin-nav-right">
                    <ul class="d-flex" style="margin-right: 15px;">
                        <li style="margin-right: 10px;">
                            <a asp-action="Index" asp-controller="Brands">
                                Brend
                            </a>
                        </li>
                        <li style="margin-right: 10px;">
                            <a asp-action="Index" asp-controller="AnswerSystem">
                                Cavablandırma sistemi
                            </a>
                        </li>
                        <li>
                            <a asp-action="Index" asp-controller="Logos" style="color:yellow;">
                                Loqo
                            </a>
                        </li>
                    </ul>
                    <p>akhundzadeh</p>
                    <a href="#">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </div>
    </nav>
</header>

<div class="container" style="padding-top: 120px;">
    <h1 class="text-center">Loqo - Yeniləmə</h1>

    <hr />

    <div class="row">
        <div class="offset-3 col-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    @*<label asp-for="ImagePath" class="control-label"></label>
                        <input asp-for="ImagePath" class="form-control" />
                        <span asp-validation-for="ImagePath" class="text-danger"></span>*@
                    <image asp-caption="Şəkil: " asp-path="/uploads/logos/@Model.ImagePath"></image>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Yenilə" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn btn-danger">
            <i class="fas fa-undo-alt"></i> Geriyə
        </a>
    </div>
</div>

